
@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<form asp-action="Index" style="margin-top:100px; margin-left:60px; margin:60px;">
    <div class=" row m-5 ">
        <div class="col-8">
            <input type="text" class="form-control" name="UserSearchInput" id="USerSearchInput" placeholder="Search..." oninput="Get();" />
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="btn btn-success" />
        </div>
    </div>
    <div class=" row m-5 ">
        <div class="col-8">
            <h1>All Users</h1>
        </div>

    </div>
</form>


<div class="container " style="margin-top:-50px;">

    
 

    

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">

            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(D => D.Id)</th>
                    <th>@Html.DisplayNameFor(D => D.FirstName)</th>
                    <th>@Html.DisplayNameFor(D => D.LastName)</th>
                    <th>@Html.DisplayNameFor(D => D.Email)</th>
                    <th>@Html.DisplayNameFor(D => D.Roles)</th>
                    <th>  Details</th>
                    <th>  Update</th>
                    <th>  Delete</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@string.Join(" " ,user.Roles)</td>
                        <Partial name="_ButtonPartialView" model="@user.Id" />
                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <div class="mt-4 alert alert-warning">
            <h4>There is no User </h4>
        </div>
    }

</div>
<!--Scroll to top-->
<div id="scroll-to-top" class="scroll-to-top">
    <span class="icon fa fa-angle-up"></span>
</div>
    
