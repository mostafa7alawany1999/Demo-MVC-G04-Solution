
@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}



<div class="container " style="margin-top:-50px;">


    <form asp-action="Index" style="margin-top:120px;">
        <div class=" row m-5 " >
            <div class="col-8">
                <input type="text" class="form-control" name="RoleSearchInput" id="RoleSearchInput" placeholder="Search..." oninput="Get();" />
            </div>
            <div class="col-4">
                <input type="submit" value="search" class="btn btn-success" />
            </div>
        </div>
        <div class=" row m-5 ">
            <div class="col-8">
                <h1>All Roles</h1>
            </div>
            <div class="col-4">
                <a asp-controller="Role" asp-action="Create" class="btn btn-primary">  Create  </a>
            </div>
        </div>
    </form>

 
    
    
 

    

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">

            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(D => D.ID)</th>
                    <th>@Html.DisplayNameFor(D => D.RoleName)</th>                   
                    <th>  Details</th>
                    <th>  Update</th>
                    <th>  Delete</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.ID</td>
                        <td>@role.RoleName</td>
                        <Partial name="_ButtonPartialView" model="@role.ID" />
                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <div class="mt-4 alert alert-warning">
            <h4>There is no Role </h4>
        </div>
    }

</div>
<!--Scroll to top-->
<div id="scroll-to-top" class="scroll-to-top">
    <span class="icon fa fa-angle-up"></span>
</div>
    
