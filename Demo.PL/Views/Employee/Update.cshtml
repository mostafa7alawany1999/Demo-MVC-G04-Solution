@model EmployeeViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Edit Page</h1>
<br />
<br />

<form asp-controller="Employee" asp-action="Update" method="post" enctype="multipart/form-data">
    <partial name="EmployeePartialViews/_EmployeeCreateEditPartialView" model="@Model" />
    <input type="hidden" asp-for="ImageName"/>
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>

</form>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

